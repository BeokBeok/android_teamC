<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@xml/splash_background</item>
    </style>

    <style name="BackDrop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BackDrop.White">
        <item name="android:background">@drawable/shape_drop_bar_white</item>
    </style>

    <style name="BackDrop.Main">
        <item name="android:background">@drawable/shape_drop_bar_main</item>
    </style>

    <style name="BackDrop.White.Arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_small</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:src">@drawable/ic_arrow_up_black_24dp</item>
    </style>

    <style name="BackDrop.Main.Arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_small</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:src">@drawable/ic_arrow_up_white_24dp</item>
    </style>

    <style name="BasicTv">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BasicTv.HeadlineM">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BasicTv.HeadlineS">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="BasicTv.HeadlineS.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BasicTv.HeadlineS.main">
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="BasicTv.HeadlineS.main.variable">
        <item name="android:textColor">@color/main_color_variation</item>
    </style>

    <style name="BasicTv.BodyL">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BasicTv.BodyMB">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="BasicTv.BodyM">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RvText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Detail_Review_Comment">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">33sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
        
</resources>
