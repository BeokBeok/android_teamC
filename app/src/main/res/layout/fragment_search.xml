<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_color">


        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_search_bar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/sv_search"
                app:layout_constraintGuide_begin="@dimen/searchbar_height"
                android:id="@+id/g_bar"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_search_back"
                style="@style/BasicBtn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/et_search_bar"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_search_title"
                style="@style/BasicTv.HeadlineM"
                android:text="@string/search_title"
                android:padding="@dimen/space_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/et_search_bar"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_search_bar"
                style="@style/BasicEt"
                android:layout_marginBottom="@dimen/space_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_search_title"
                app:layout_constraintBottom_toTopOf="@id/g_bar"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_search_map"
                style="@style/BasicBtn"
                app:layout_constraintLeft_toRightOf="@id/et_search_bar"
                app:layout_constraintBottom_toTopOf="@id/g_bar"
                app:layout_constraintTop_toBottomOf="@id/tv_search_title"/>

        <ScrollView
                android:id="@+id/sv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/g_bar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <FrameLayout
                    android:id="@+id/fl_search_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

            </FrameLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>