<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
                name="viewModel"
                type="kr.co.connect.boostcamp.livewhere.ui.main.SearchViewModel"/>
    </data>
    <LinearLayout
            android:id="@+id/ll_search_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color">
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_search_back"
                    style="@style/BasicBtn"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    android:onClick="@{() -> viewModel.searchBtnClicked}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/et_search_bar"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_search_title"
                    style="@style/BasicTv.HeadlineM"
                    android:text="@string/search_title"
                    android:padding="@dimen/space_small"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/et_search_bar"/>
            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_search_bar"
                    style="@style/BasicEt"
                    android:layout_marginBottom="@dimen/space_small"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_search_title"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_search_map"
                    style="@style/BasicBtn"
                    android:src="@drawable/ic_outline_map_white_24px"
                    app:layout_constraintLeft_toRightOf="@id/et_search_bar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_search_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
                android:id="@+id/sv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <View android:id="@+id/v_recommend"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
                <include
                        bind:viewModel="@{viewModel}"
                        layout="@layout/fragment_recent_search"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>