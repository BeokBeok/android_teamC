<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="autoComplete"
                  type="java.lang.String"/>
        <variable
                name="searchViewModel"
                type="kr.co.connect.boostcamp.livewhere.ui.main.SearchViewModel"/>
    </data>
    <LinearLayout
            style="@style/Table.Double"
            android:onClick="@{()->searchViewModel.onClickAutoComplete(autoComplete)}"
            android:gravity="center|left"
            android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_auto_complete"
                style="@style/BasicTv.BodyL"
                android:text="@{autoComplete}"
                android:layout_margin="@dimen/space_small"
                android:textColor="@color/black"/>
    </LinearLayout>
</layout>
