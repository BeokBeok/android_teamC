<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"  >
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_color"
            tools:context=".ui.main.HomeActivity"
    >
        <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.35"
                android:src="@drawable/img_home_logo"
        />

        <ImageView
                android:id="@+id/iv_search_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_logo"
                android:layout_margin="@dimen/home_between_logo_and_search_bar_margin"
                android:src="@drawable/btn_home_search_bar"
        />

        <LinearLayout
                android:id="@+id/btn_bookmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shape_drop_bar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" >

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_small"
                    android:padding="@dimen/space_small"
                    android:src="@drawable/img_all_arrow_up_black"
            />

            <TextView
                    style="@style/BasicTv.HeadlineS.black"
                    android:textColor="@color/black"
                    android:text="@string/home_bookmark"
            />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
