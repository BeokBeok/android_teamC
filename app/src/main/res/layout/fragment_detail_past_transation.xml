<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="kr.co.connect.boostcamp.livewhere.ui.detail.DetailViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/detail_contents_bottom_padding"
            android:paddingHorizontal="@dimen/detail_contents_horizontal_padding">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/detail_fragment_tv_past_transation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/past_transation"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/BasicTv.BodyL"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detail_fragment_rv_past_transation"
                android:layout_marginHorizontal="@dimen/detail_rv_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/detail_fragment_tv_past_transation"
        >
        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>