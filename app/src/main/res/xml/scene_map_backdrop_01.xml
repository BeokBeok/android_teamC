<?xml version="1.0" encoding="utf-8"?>
<MotionScene
        xmlns:motion="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <Transition
            motion:constraintSetStart="@layout/motion_01_map_backdrop_start"
            motion:constraintSetEnd="@layout/motion_01_map_backdrop_end">
        <!-- recyclerview 중첩 이벤트 제거 moveWhenScrollAtTop = true-->
        <OnSwipe
                motion:touchAnchorId="@id/ll_search_map"
                motion:moveWhenScrollAtTop="true"
                motion:dragDirection="dragUp"/>
        <!-- 20 frame 까지 버튼을 보여줬다가
        40 프레임 때 버튼을 감춤-->
    </Transition>
    <Transition
            motion:constraintSetStart="@layout/motion_01_map_backdrop_start"
            motion:constraintSetEnd="@layout/motion_02_map_backdrop_end"
            motion:duration="400">
        <OnSwipe
                motion:touchAnchorId="@id/ll_search_map"
                motion:moveWhenScrollAtTop="true"
                motion:dragDirection="dragDown"/>

    </Transition>
    <Transition
            motion:constraintSetStart="@layout/motion_01_map_backdrop_start"
            motion:constraintSetEnd="@layout/motion_02_map_backdrop_end"
            motion:duration="400">
        <OnSwipe
                motion:touchAnchorId="@id/ll_search_map"
                motion:moveWhenScrollAtTop="true"
                motion:dragDirection="dragDown"/>

    </Transition>
    <Transition
            motion:constraintSetStart="@layout/motion_02_map_backdrop_end"
            motion:constraintSetEnd="@layout/motion_01_map_backdrop_start"
            motion:duration="400">
        <OnSwipe
                motion:touchAnchorId="@id/ll_place_detail"
                motion:moveWhenScrollAtTop="true"
                motion:dragDirection="dragDown"/>
    </Transition>
</MotionScene>