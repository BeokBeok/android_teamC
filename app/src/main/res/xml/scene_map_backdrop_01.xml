<?xml version="1.0" encoding="utf-8"?>
<MotionScene
        xmlns:motion="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <Transition
            motion:constraintSetStart="@layout/motion_01_map_backdrop_start"
            motion:constraintSetEnd="@layout/motion_01_map_backdrop_middle"
            motion:duration="400">
        <OnSwipe
                motion:touchAnchorId="@id/ll_place_detail"
                motion:moveWhenScrollAtTop="true"
                motion:dragDirection="dragUp"/>

    </Transition>
    <Transition
            motion:constraintSetStart="@layout/motion_01_map_backdrop_middle"
            motion:constraintSetEnd="@layout/motion_01_map_backdrop_end">
        <!-- recyclerview 중첩 이벤트 제거 moveWhenScrollAtTop = true-->
        <OnSwipe
                motion:touchAnchorId="@id/ll_place_detail"
                motion:moveWhenScrollAtTop="true"
                motion:dragDirection="dragUp"/>
        <KeyFrameSet>
            <KeyAttribute motion:target="@id/iv_place_image"
                          motion:framePosition="0"
                          android:alpha="0"/>
            <KeyAttribute motion:target="@id/scaleBarView"
                          motion:framePosition="0"
                          android:alpha="0"/>
            <KeyAttribute motion:target="@id/logoView"
                          motion:framePosition="0"
                          android:alpha="0"/>
        </KeyFrameSet>
    </Transition>
    <Transition
            motion:constraintSetStart="@+id/collapsed_image_view"
            motion:constraintSetEnd="@+id/expand_image_view">
        <OnClick
                motion:target="@id/iv_place_image"
                motion:clickAction="toggle"/>
        <OnSwipe
            motion:touchAnchorId="@id/iv_place_image"
            motion:dragDirection="dragUp"/>

    </Transition>
    <ConstraintSet android:id="@+id/collapsed_image_view">
        <Constraint
                android:id="@id/iv_place_image"
                android:layout_width="@dimen/place_image_view_width"
                android:layout_height="@dimen/place_image_view_width"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/expand_image_view">
        <Constraint
                android:id="@id/iv_place_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </ConstraintSet>
</MotionScene>